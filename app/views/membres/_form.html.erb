<%= form_for(@membre) do |f| %>
  <% if @membre.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membre.errors.count, "erreur") %> dans votre saisie:</h2>

      <ul>
      <% @membre.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <%= f.label :mail %><br />
    <%= f.text_field :mail %>
  </div>
  <div class="field">
    <%= f.label :adresse %><br />
    <%= f.text_area :adresse, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
